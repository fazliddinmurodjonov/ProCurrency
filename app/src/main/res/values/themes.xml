<resources>
    <!-- Base application theme. -->
    <style name="Theme.ProCurrency" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_500</item>
        <item name="colorPrimaryVariant">@color/color_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:icon">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.AppCompat.SearchView" parent="">
        <item name="android:editTextColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Change the search icon drawable -->
        <item name="searchIcon">@drawable/search</item>
    </style>


    <style name="Theme.ProCurrency.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProCurrency.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AppCompat.Widget.ActionBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="fontFamily">@font/sf_display_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_display_regular</item>
    </style>

    <style name="TextBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_display_bold</item>
    </style>

    <style name="HistoryBgCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/shapeAppearance_ramadan_table</item>
    </style>

    <style name="shapeAppearance_ramadan_table">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.Inactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/sf_display_regular</item>
        <item name="color">@color/unselected_icon</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/sf_display_regular</item>
        <item name="android:textColor">@color/green_one</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NavigationTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sf_display_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>